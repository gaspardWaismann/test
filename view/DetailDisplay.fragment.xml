<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core">
  <l:Grid
    defaultSpan="L12 M12 S12"
    width="auto">
    <l:content>
      <f:SimpleForm id="SimpleFormDisplay354"
        minWidth="1024"
        maxContainerCols="2"
        editable="false"
        layout="ResponsiveGridLayout"
        title="{i18n>displayEntryTitle}"
        labelSpanL="3"
        labelSpanM="3"
        emptySpanL="4"
        emptySpanM="4"
        columnsL="1"
        columnsM="1">
        <f:content>
			<Label text="{i18n>addEntryLabelId}" />
            <Text text="{id}" />
			<Label text="{i18n>addEntryLabelName}" />
            <Text text="{name}" />
        </f:content>
      </f:SimpleForm>
    </l:content>
  </l:Grid>
</core:FragmentDefinition>
