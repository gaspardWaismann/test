<mvc:View
	controllerName="crudkapsel.view.AddEntry"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m">
	<Page
		class="sapUiFioriObjectPage"
		title="{i18n>addEntryTitle}">
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					id="idAddEntryForm"
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					title="New Entry"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="4"
					emptySpanM="4"
					columnsL="1"
					columnsM="1"
					class="editableForm">
					<f:content>
						<!-- Basic info -->
						<c:Title text="{i18n>addEntryTitleBasic}" />
						<Label text="{i18n>addEntryLabelName}" />
						<Input value="{newEntry>/Detail/name}" />
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>addEntryButtonSave}" type="Emphasized" press="onSave" />
				<Button text="{i18n>addEntryButtonCancel}" press="onCancel" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
