<mvc:View
    height="100%"
    controllerName="crudkapsel.view.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page
        id="idFormContainer"
        showNavButton="{device>/isPhone}"
    	navButtonPress="onNavBack"
    	class="sapUiFioriObjectPage"
    	title="{i18n>detailTitle}">
		<footer>
			<Toolbar>
			    <ToolbarSpacer/>
				<Button
				    id="idButtonEdit"
					icon="sap-icon://edit"
					type="Accept"
					tooltip="{i18n>editEntry}"
					press="onFooterBarButtonPress" />
				<Button
				    id="idButtonDelete"
					icon="sap-icon://delete"
					tooltip="{i18n>deleteEntry}"
					type="Reject"
					press="onFooterBarButtonPress" />
				<Button 
				    id="idButtonSave"
				    icon="sap-icon://save"   
				    tooltip="{i18n>editEntryButtonSave}" 
				    type="Accept"
				    visible="false" 
				    press="onFooterBarButtonPress" />
				<Button 
				    id="idButtonCancel"
				    icon="sap-icon://sys-cancel" 
				    tooltip="{i18n>editEntryButtonCancel}" 
				    type="Reject"
				    visible="false" 
				    press="onFooterBarButtonPress" />
				</Toolbar>
		</footer>
	</Page>
</mvc:View>